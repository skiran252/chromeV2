{
	"name": "WebSpeech API v1",
	"description": "Base Level Extension",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "index.html",
		"default_title": "Open the extension",
		"default_icon": {
			"16": "logo192.png",
			"48": "logo192.png",
			"128": "logo192.png"
		}
	},
	"content_security_policy": {
		"script-src": ["'self'", "'unsafe-eval'"],
		"object-src": ["'self'"]
	},
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"webNavigation",
		"webRequest",
		"activeTab",
		"declarativeContent",
		"identity",
		"identity.email",
		"notifications",
		"background",
		"https://*/*",
		"speechRecognition"
	],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["./static/js/content.js"],
			"all_frames": false,
			"run_at": "document_end"
		}
	],
	"optional_permissions": ["<all_urls>"],
	"background": {
		"service_worker": "background.js"
	},
	"options_ui": {
		"page": "options.html"
	}
}
